

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id @default(uuid())
  profileImg String?
  username  String   
  email    String @unique
  password  String 
  bio       String?
  posts     Post[]
}

model Post {
  id  String @id @default(uuid())
  title String
  description String
  createdAt DateTime @default(now())
  userId  String 
  user    User @relation(fields: [userId],references: [id])
}
